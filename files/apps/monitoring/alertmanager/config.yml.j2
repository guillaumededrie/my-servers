---
route:
    receiver: "pushover"

receivers:
    - name: "pushover"
      pushover_configs:
          - send_resolved: true
            user_key: "{{ monitoring_pushover_user_key }}"
            token: "{{ monitoring_pushover_token }}"
{%- raw %}
            title: "{{ .CommonAnnotations.summary }}"
            message: "{{ .CommonAnnotations.description }}"
{% endraw %}
            url: "https://api.pushover.net/1/messages.json"
